<!DOCTYPE html>
<html lang="en">
    <%- include('../includes/head.ejs') %>
    <body class="body">
        <%- include('../includes/header.ejs') %>
        <main>
            <%- include('../includes/menu.ejs') %>
            <div class="div-main">
                <div class="div-toolbar">
                    <div class="menu-option-info">
                        <h2>
                            <i class="fa-solid fa-calendar-plus"></i>Add task
                        </h2>
                    </div>
                </div>
                <form
                    class="div-task-info"
                    action="/user/add-task"
                    method="POST"
                >
                    <div class="new-task">
                        <i class="fa-solid fa-plus"></i>
                        <input
                            type="text"
                            name="taskName"
                            id="input-task_name"
                            placeholder="Add a task"
                            autocomplete="off"
                            class="input-task_name"
                        />
                    </div>

                    <div class="task-features">
                        <label for="input-date"
                            >Completion date:
                            <input
                                type="date"
                                name="completionDate"
                                id="input-date"
                                autocomplete="off"
                                class="input-date"
                            />
                        </label>
                        <button type="submit" class="btn-add">Add</button>
                    </div>
                </form>
                <ul class="tasks-list"></ul>
            </div>
        </main>
    </body>
</html>
