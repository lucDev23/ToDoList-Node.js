<!DOCTYPE html>
<html lang="en">
    <%- include('../includes/head.ejs') %>
    <body class="body">
        <%- include('../includes/header.ejs') %>
        <main>
            <%- include('../includes/menu.ejs') %>
            <div class="div-main">
                <div class="div-toolbar">
                    <div class="menu-option-info">
                        <h2>
                            <i class="fa-solid fa-list-check menu-icon"></i
                            >Tasks list
                        </h2>
                    </div>
                </div>
                <ul class="tasks-list">
                    <% for (let task of allTasks) { %>
                    <li class="task-item">
                        <button
                            class="task-status"
                            type="button"
                            title="Mark as done"
                        >
                            <i class="fa-solid fa-check"></i>
                        </button>
                        <h3 class="task-name"><%= task.name %></h3>
                        <p class="task-date">
                            Created at: <%= task.createdAt %>
                        </p>
                        <p class="task-date">
                            Completion date: <%= task.completionDate %>
                        </p>
                        <button class="add-to-imp">
                            <i
                                class="fa-regular fa-star menu-icon"
                                title="Add to important"
                            ></i>
                        </button>
                    </li>

                    <% } %>
                </ul>
            </div>
        </main>
    </body>
</html>
