    <body class="body">
        <header>
            <nav class="nav">
				<div class="div-auth">
					<a class="button-auth" href="/auth/login">
                        <i class="fa-solid fa-right-to-bracket"></i>
                        Sign in
					</a>
                    <a class="button-auth" href="/auth/signup">
                        Sign up
					</a>
				</div>
                    
            </nav>
        </header>
        <hr class="separator" />
